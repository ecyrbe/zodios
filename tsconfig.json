{
  // ts config for es 2021
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2019"],
    "outDir": "./lib",
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "examples",
    "**/*.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.d.ts"
  ]
}
